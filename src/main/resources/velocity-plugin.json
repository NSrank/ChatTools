{
  "id": "chattools",
  "name": "ChatTools",
  "version": "1.4",
  "description": "跨服聊天和服务器别名工具",
  "authors": ["NSrank & Qwen2.5-Max"],
  "main": "org.plugin.chattools.ChatTools",
  "dependencies": [
    {
      "id": "velocity",
      "version": "3.4.0"
    }
  ],
  "commands": {
    "tell": {
      "description": "跨服私聊功能",
      "aliases": ["msg"],
      "permission": "chattools.command.tell"
    },
    "chattools": {
      "description": "重载插件配置",
      "aliases": ["ct"],
      "permission": "chattools.reload"
    }
  }
}